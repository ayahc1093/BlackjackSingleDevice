<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.student.blackjacksingledevice" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".OpeningActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetupGameActivity"
            android:label="@string/title_activity_setup_game">
        </activity>
        <activity
            android:name=".GamePlayActivity"
            android:label="@string/title_activity_game_play"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".EndGameActivity"
            android:label="@string/title_activity_end_game"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
